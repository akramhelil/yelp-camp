<% include partials/headers %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 40px auto;"> 
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter Campname...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image Url ..">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="des" placeholder="Describe Campground here..."></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" ">Submit</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>


<% include partials/footer %>